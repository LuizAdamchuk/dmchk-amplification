datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  mfes      Mfe[]    @relation(fields: [mfesIds], references: [id])
  mfesIds   String[] @db.ObjectId
  name      String?
  updatedAt DateTime @updatedAt
  username  String?
}

model Mfe {
  active                 Boolean?
  authenticationRequired Boolean?
  createdAt              DateTime @default(now())
  description            String?
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  key                    String?  @unique
  updatedAt              DateTime @updatedAt
  User                   Users[]  @relation(fields: [UserIds], references: [id])
  UserIds                String[] @db.ObjectId
}
